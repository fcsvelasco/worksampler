                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/help_operators_machines_tab_description"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/help_sampling_schedule_tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/help_sampling_schedule_tab_title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/help_sampling_schedule_tab_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/help_sampling_schedule_tab_description"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/help_viewing_results_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/help_viewing_results_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/help_viewing_results_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/help_viewing_results_description"
                android:textSize="18sp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>